<layout id="MainLayout">
	<drawable class="Background" />    
	<label id="TeaInfo" x="center" y="50" justification="Gfx.TEXT_JUSTIFY_CENTER" />
    <label id="TimeRemaining" x="center" y="75" justification="Graphics.TEXT_JUSTIFY_CENTER" />
    <button x="center" y="175" width="250" height="150">
        <state id="stateDefault" color="Gfx.COLOR_BLUE" />
        <state id="stateHighlighted" color="Gfx.COLOR_DK_BLUE" />
        <state id="stateSelected" color="Gfx.COLOR_DK_BLUE" />
        <state id="stateDisabled" color="Gfx.COLOR_DK_GRAY" />
        <param name="background">Gfx.COLOR_BLACK</param>
        <param name="behavior">onSelect</param>
    </button>
    <label id="ButtonLabel" x="center" y="180" justification="Gfx.TEXT_JUSTIFY_CENTER" text="Edit" />
</layout>
